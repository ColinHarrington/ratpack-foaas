#!/usr/bin/env bash
# bin/release <build-dir>

BUILD_DIR=$1

echo "ratpack release running"
echo "pwd: "
echo `pwd`

cat <<EOF
---
config_vars:
  JAVA_HOME: .jdk7
  JAVA_OPTS: -Dfile.encoding=UTF-8 -server -Xmx512m -XX:+UseCompressedOops
  RATPACK_SITE_OPTS: -Dratpack.port=\$PORT
EOF

if [ ! -f $BUILD_DIR/Procfile ]; then
cat <<EOF
default_process_types:
  web: foaas/build/install/foaas/bin/foaas foaas/build/install/foaas/ratpack.groovy
EOF
fi
